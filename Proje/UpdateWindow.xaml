<Window x:Class="Proje.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proje"
        mc:Ignorable="d"
        Title="UpdateWindow" Height="450" Width="800">
    <Grid x:Name="surnameTB">
        <Label Content="ID :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,19,0,0" FontSize="30" Height="98" Width="250" FontFamily="Yu Gothic UI Semibold"/>
        <Label Content="Name :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" FontSize="30" Height="98" Width="250" FontFamily="Yu Gothic UI Semibold"/>
        <Label Content="Surname :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,141,0,0" RenderTransformOrigin="1.016,3.053" FontSize="30" Height="98" Width="250" FontFamily="Yu Gothic UI Semibold"/>
        <Label Content="Phone Number:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,202,0,0" FontSize="30" Height="98" Width="250" FontFamily="Yu Gothic UI Semibold"/>
        <TextBox x:Name="idTB" HorizontalAlignment="Left" Height="41" TextWrapping="Wrap" VerticalAlignment="Top" Width="273" Margin="260,19,0,0" FontSize="30"/>
        <TextBox x:Name="nameTB" HorizontalAlignment="Left" Height="41" TextWrapping="Wrap" VerticalAlignment="Top" Width="273" Margin="260,80,0,0" FontSize="30"/>
        <TextBox x:Name="surnameTB1" HorizontalAlignment="Left" Height="41" TextWrapping="Wrap" VerticalAlignment="Top" Width="273" Margin="260,137,0,0" FontSize="30"/>
        <TextBox x:Name="phoneTB" HorizontalAlignment="Left" Height="41" TextWrapping="Wrap" VerticalAlignment="Top" Width="273" Margin="260,202,0,0" FontSize="30"/>
        <Button x:Name="updateButton" Content="UPDATE" HorizontalAlignment="Left" Margin="95,300,0,0" VerticalAlignment="Top" Width="165" Height="64" Click="updateButton_Click" RenderTransformOrigin="2.995,0.648" FontFamily="Stencil" FontSize="24"/>
        <Button x:Name="cancelButton" Content="CANCEL" HorizontalAlignment="Right" Margin="0,300,99,0" VerticalAlignment="Top" Width="165" Height="64" RenderTransformOrigin="1.866,0.53" Click="cancelButton_Click" FontFamily="Stencil" FontSize="24"/>

    </Grid>
</Window>
